{
  "name": "@lib-stack/logger",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.14.0",
  "description": "A management tool for log printing.",
  "author": "Kisstar <dwh.chn@foxmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/lib-stack/logger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lib-stack/logger.git"
  },
  "bugs": {
    "url": "https://github.com/lib-stack/logger/issues"
  },
  "keywords": [
    "lib",
    "logger"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/logger.es.d.ts",
      "module": "./dist/logger.es.js",
      "import": "./dist/logger.es.js"
    },
    "./*": "./*"
  },
  "main": "./dist/logger.es.js",
  "module": "./dist/logger.es.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=24.1.0",
    "pnpm": ">=10.14.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.1.0",
      "onFail": "error"
    }
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "vite build",
    "dev": "vite dev",
    "commit": "git-cz",
    "lint": "eslint",
    "release": "release-it",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "release-it": "^19.0.4",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
